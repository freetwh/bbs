extends ../layouts/main
block head
 link(rel="stylesheet",href="../bootstrap/dist/css/bootstrap.css")
block content
 form.form-horizontal(role="form",enctype="multipart/form-data",method="POST",action="/contest/photo/year=year/month=month")
  .form-group
   label.col-sm-2.control-label(for="fieldName") 姓名
   .col-sm-4
    input(type="text",name="name").form-control#fieldName
  .form-group
   label.col-sm-2.control-label(for="fieldEmail") 邮箱
   .col-sm-4
    input(type="email",name="email",required).form-control#fieldEmail
  .form-group
   label.col-sm-2.control-label(for="fieldPhoto") 摄影作品
   .col-sm-4
    input(type="file",name="photo",required).form-control#fieldPhoto
  .form-group
   .col-sm-offset-2.col-sm-4
    button(type="submit").btn.btn-primary 提交